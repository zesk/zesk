<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
         verbose="true" backupGlobals="false" bootstrap="test.application.php"
         convertErrorsToExceptions="true" convertWarningsToExceptions="true"
         convertNoticesToExceptions="true">
    <testsuites>
        <!--Test suite for Zesk web application framework -->
        <testsuite name="core">
            <directory>test/tests</directory>
        </testsuite>
        <testsuite name="database">
            <directory>modules/database/test</directory>
        </testsuite>
        <testsuite name="world">
            <directory>modules/world/test</directory>
        </testsuite>
    </testsuites>
    <extensions>
        <extension class="zesk\PHPUnit_TestHooks"/>
    </extensions>
    <php>
        <const name="PHPUNIT" value="true"/>
    </php>
    <coverage cacheDirectory="./.zesk-coverage"
              includeUncoveredFiles="true"
              processUncoveredFiles="true"
              pathCoverage="false"
              ignoreDeprecatedCodeUnits="true"
              disableCodeCoverageIgnore="true">
    </coverage>
</phpunit>
