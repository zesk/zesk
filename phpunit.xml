<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.0/phpunit.xsd" bootstrap="test.application.php"
         processIsolation="false" backupGlobals="false" colors="true" cacheDirectory=".phpunit-cache"
         backupStaticProperties="false">
    <testsuites>
        <!--Test suite for Zesk web application framework -->
        <testsuite name="core">
            <directory>test/core</directory>
        </testsuite>
        <testsuite name="orm">
            <directory>modules/ORM/test</directory>
        </testsuite>
        <testsuite name="csv">
            <directory>modules/CSV/test</directory>
        </testsuite>
        <testsuite name="diff">
            <directory>modules/Diff/test</directory>
        </testsuite>
        <testsuite name="database">
            <directory>modules/Database/test</directory>
        </testsuite>
        <testsuite name="preference">
            <directory>modules/Preference/test</directory>
        </testsuite>
        <testsuite name="world">
            <directory>modules/World/test</directory>
        </testsuite>
    </testsuites>
    <php>
        <const name="PHPUNIT" value="true"/>
    </php>
    <coverage includeUncoveredFiles="true" pathCoverage="false" ignoreDeprecatedCodeUnits="true"
              disableCodeCoverageIgnore="false">
    </coverage>
</phpunit>
